<% layout('layouts/boilerplate') %>


<div class = "row">
    <div class="col-md-6 mx-auto">
        <%- include('../partials/flash') %>
        <h1 class="display-6">Sign up</h1>
        <form action="/register" method="POST">
            
            <div class="mb-3">
                    <label class="form-label" for="username">Username:</label>
                    <!-- name must be same as the schema  -->
                    <input type="text" class="form-control" name="username" id="username" placeholder="Username" > 
            </div>
            <div class="mb-3">
                    <label class="form-label" for="email">Email:</label>
                    <!-- name must be same as the schema  -->
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email" > 
            </div>

            <div class="mb-3">
                <p class="mb-2">Want to register as?</p>
                <div class="mx-2">
                    <!-- name must be same as the schema  -->
                    <label class="form-label" for="buyer">Buyer:</label>
                    <input type="radio" class="form-check-input" name="role" id="buyer" value="buyer"> 
                </div>
                <div class="mx-2">
                    <label class="form-label" for="seller">Seller:</label>
                    <input type="radio" class="form-check-input" name="role" id="seller" value="seller"> 
                </div>
            </div>

            <div class="mb-3">
                    <label class="form-label" for="password">Password:</label>
                    <!-- name must be same as the schema  -->
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" > 
            </div>
            <button type="submit" class="btn btn-sm btn-success">Sign Up</button>
            <p class="fw-light mt-2">Already have an account, <a href="/login">Login</a></p>

    </form>

    </div>
    
</div>

</body>
</html>


