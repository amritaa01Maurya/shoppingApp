<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar') %>

    <div class="row">

        <div class="col-lg-4 mt-3">
            <div class="card shadow mx-auto" style="width: 18rem;">
                <img src="<%=foundProduct.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h2 class="card-title">
                        <%= foundProduct.name %>
                    </h2>
                    <h5 class="card-title">
                        <%= foundProduct.price %>
                    </h5>
                    <p class="card-text">
                        <%= foundProduct.description %>
                    </p>
                    <!-- <a href="/products" class="btn btn-sm btn-light">Home</a> -->
                    <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-sm btn-light">Edit</a>
                    <a href="#" class="btn btn-sm btn-secondary">Add to cart</a>
                    <a href="#" class="btn btn-sm btn-success">Buy</a>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <h1 class="display-5">Leave a Review</h1>
            <form action="/products/<%=foundProduct._id%>/review" method="POST">
                <div>
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="comment">Comment:</label>
                    <textarea class="form-control" name="comment" id="comment" cols="30" rows="3"></textarea>
                </div>
                <button class="btn btn-sm btn-success">Add review</button>
            </form>
            <!-- show reviews of a particular product -->
             <div class="my -3">
                <% for(let review of foundProduct.reviews){ %>
                    
                    <div class="card mt-3">
                        <p class="card-title mx-1">
                            <%if(review.createdAt) { %>
                                <%= review.createdAt.toDateString() %>
                            <% } %>
                        </p>
                        <!-- <div class="card-header">Rating: <%= review.rating %></div> -->
                          <!-- <h3>Rating</h3> -->
                            <p class="starability-result" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %> stars
                            </p>
                        <div class="card-body">
                            <h5 class="card-title">Comment:</h5>
                            <p class="card-text"><%= review.comment %></p>
                            <a href="#" class="btn btn-primary">Like</a>
                        </div>

                    </div>
                    <% } %>
             </div>

        </div>

    </div>

</body>
</html>